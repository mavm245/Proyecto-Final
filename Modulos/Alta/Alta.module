function alta_form($form, &$form_submit) {
  if (empty($form_submit['storage'])) {
    $form_submit['storage'] = array(
      'step' => 'alta_rev_form',
    );
  }
  $function = $form_submit['storage']['step'];
  $form = $function($form, $form_submit);
  return $form;
}


